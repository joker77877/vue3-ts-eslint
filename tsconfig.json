{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.css",
        "src/**/*.vue",
        ".eslintrc.js",
        "*.ts",
        "components.d.ts"
    ],
    "exclude": ["node_modules"]
}
